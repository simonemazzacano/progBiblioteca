        <TextBox x:Name="txtEditore" HorizontalAlignment="Left" Height="35" Margin="216,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <TextBox x:Name="txtNumeroPagine" HorizontalAlignment="Left" Height="35" Margin="216,293,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="btnAggiungiLibro" Content="Aggiungi libro" HorizontalAlignment="Left" Margin="216,333,0,0" VerticalAlignment="Top" Width="138" Height="35" Click="btnAggiungiLibro_Click"/>
        <ListBox x:Name="lstiLibri" HorizontalAlignment="Left" Height="247" Margin="19,48,0,0" VerticalAlignment="Top" Width="173"/>
        <TextBox x:Name="txtCerca" HorizontalAlignment="Left" Height="35" Margin="463,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171"/>
