        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl_InfoBiblioteca" Content="" HorizontalAlignment="Left" Margin="639,173,0,0" VerticalAlignment="Top" Height="164" Width="129"/>
