        <Button x:Name="btnCerca" Content="Cerca" HorizontalAlignment="Left" Margin="463,89,0,0" VerticalAlignment="Top" Width="171" Height="41" Click="btnCerca_Click"/>
        <Label Content="Autore" HorizontalAlignment="Left" Margin="216,32,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
        <Label Content="Titolo" HorizontalAlignment="Left" Margin="216,84,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
        <Label Content="Anno pubblicazione" HorizontalAlignment="Left" Margin="216,138,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
        <Label Content="Editore" HorizontalAlignment="Left" Margin="216,200,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
        <Label Content="Numero pagine" HorizontalAlignment="Left" Margin="216,263,0,0" VerticalAlignment="Top" Height="32" Width="121"/>

    </Grid>
