        <RadioButton x:Name="radioTitolo" Content="Titolo" HorizontalAlignment="Left" Margin="380,92,0,0" VerticalAlignment="Top"/>
        <Label Content="Cerca per:" HorizontalAlignment="Left" Margin="371,46,0,0" VerticalAlignment="Top" Height="32" Width="121"/>
